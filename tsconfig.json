{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test?.*"
  ],
  "ts-node": {
    "esm": true
  }
}
